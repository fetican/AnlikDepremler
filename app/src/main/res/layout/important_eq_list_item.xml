<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardViewMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/importantMagnitude"
                android:layout_margin="@dimen/titleMargin"
                android:textSize="@dimen/magnitude"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/magnitude_background_yellow"
                tools:text="6,3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/importantLocation"
                    android:textSize="@dimen/title"
                    android:layout_marginStart="@dimen/titleMargin"
                    android:layout_marginLeft="@dimen/titleMargin"
                    android:layout_marginTop="@dimen/titleMargin"
                    android:layout_marginBottom="@dimen/titleMargin"
                    tools:text="YESILHISAR-KAYSERI Otomatik"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/bodyItemsMargin"
                    android:id="@+id/importantMagnitudeFelt"
                    android:padding="2dp"
                    tools:text="Hissedilen Şiddet: 5,3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_date_range_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/bodyItemsMargin"
                            android:layout_marginLeft="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_gravity="center"
                            android:id="@+id/importantDate"
                            tools:text="15.08.2017"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_schedule_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/bodyItemsMargin"
                            android:id="@+id/importantHour"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginStart="2dp"
                            tools:text="08.35.54"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/bodyItemsMargin"
                    android:layout_marginLeft="@dimen/bodyItemsMargin"
                    android:layout_marginStart="@dimen/bodyItemsMargin"
                    tools:text="Can Kaybı: 17"
                    android:id="@+id/lifeLost"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bodyItemsMargin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        tools:text="Hasarlı Bina: 1000"
                        android:id="@+id/damagedBuildings"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>